{{ 'section-custom-gift-guide-banner.css' | asset_url | stylesheet_tag }}

{% style %}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    --mobile-image-height: {{ section.settings.mobile_image_height }}px;
    --top-bar-bg: {{ section.settings.top_bar_bg }};
    --top-bar-text-color: {{ section.settings.top_bar_text_color }};
    --footer-bg-color: {{ section.settings.footer_bg_color }};
    --footer-text-color: {{ section.settings.footer_text_color }};
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{% endstyle %}

<div class="custom-gift-guide-section section-{{ section.id }}-padding">
  <!-- 1️⃣ TOP ANNOUNCEMENT BAR -->
  <div class="gift-guide-top-bar">
    <div class="gift-guide-top-bar-inner">
      <div class="top-bar-logo">
        {%- if section.settings.logo != blank -%}
          {{
            section.settings.logo
            | image_url: width: section.settings.logo_width
            | image_tag: loading: 'lazy', width: section.settings.logo_width, alt: section.settings.logo.alt
            | default: shop.name
          }}
        {%- else -%}
          <span>{{ shop.name }}</span>
        {%- endif -%}
      </div>

      <div class="top-bar-content">
        {{ section.settings.announcement_text }}
      </div>

      <div class="top-bar-cta">
        <a href="{{ section.settings.top_btn_link }}" class="top-bar-button">
          {{ section.settings.top_btn_text }}
          <svg width="26" height="12" viewBox="0 0 26 12" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M0.75 4.77298L7.37629e-08 4.77298L-7.37629e-08 6.27298L0.75 6.27298L0.75 4.77298ZM25.2803 6.05331C25.5732 5.76042 25.5732 5.28554 25.2803 4.99265L20.5074 0.21968C20.2145 -0.073213 19.7396 -0.0732131 19.4467 0.21968C19.1538 0.512574 19.1538 0.987447 19.4467 1.28034L23.6893 5.52298L19.4467 9.76562C19.1538 10.0585 19.1538 10.5334 19.4467 10.8263C19.7396 11.1192 20.2145 11.1192 20.5074 10.8263L25.2803 6.05331ZM0.75 6.27298L24.75 6.27298L24.75 4.77298L0.75 4.77298L0.75 6.27298Z" fill="black"/>
          </svg>
        </a>
      </div>
    </div>
  </div>

  <!-- 1.5️⃣ TOP RECTANGLE IMAGE -->
  {%- if section.settings.top_image != blank -%}
    <div class="gift-guide-top-image-wrapper">
      {{
        section.settings.top_image
        | image_url: width: 2800
        | image_tag: loading: 'lazy', sizes: '100vw', alt: section.settings.top_image.alt
      }}

      <!-- Mobile Only Button over image -->
      <a href="{{ section.settings.main_btn_link }}" class="primary-button mobile-only">
        {{ section.settings.main_btn_text }}
        <svg width="27" height="12" viewBox="0 0 27 12" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M0.75 4.77295L7.83954e-08 4.77295L-7.83954e-08 6.27295L0.75 6.27295L0.75 4.77295ZM26.7876 6.05328C27.0805 5.76039 27.0805 5.28551 26.7876 4.99262L22.0146 0.21965C21.7217 -0.0732435 21.2468 -0.0732435 20.9539 0.21965C20.6611 0.512543 20.6611 0.987417 20.9539 1.28031L25.1966 5.52295L20.9539 9.76559C20.6611 10.0585 20.6611 10.5334 20.9539 10.8263C21.2468 11.1191 21.7217 11.1191 22.0146 10.8263L26.7876 6.05328ZM0.75 6.27295L26.2572 6.27295L26.2572 4.77295L0.75 4.77295L0.75 6.27295Z" fill="white"/>
        </svg>
      </a>
    </div>
  {%- endif -%}

  <!-- 2️⃣ BOTTOM MAIN SECTION -->
  <div class="gift-guide-main-container">
    <!-- Left Column: Content -->
    <div class="gift-guide-content-col content-align-{{ section.settings.desktop_content_alignment }} mobile-align-{{ section.settings.mobile_content_alignment }}">
      <h2 class="gift-guide-heading">
        <span class="desktop-show-only">{{ section.settings.heading }}</span>
        <span class="mobile-show-only">
          {% if section.settings.mobile_heading != blank %}
            {{ section.settings.mobile_heading }}
          {% else %}
            {{ section.settings.heading }}
          {% endif %}
        </span>
      </h2>
      <div class="gift-guide-desc">
        <div class="desktop-show-only">{{ section.settings.description | newline_to_br }}</div>
        <div class="mobile-show-only">
          {% if section.settings.mobile_description != blank %}
            {{ section.settings.mobile_description | newline_to_br }}
          {% else %}
            {{ section.settings.description | newline_to_br }}
          {% endif %}
        </div>
      </div>

      <a href="{{ section.settings.main_btn_link }}" class="primary-button">
        {{ section.settings.main_btn_text }}
        <svg width="27" height="12" viewBox="0 0 27 12" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M0.75 4.77295L7.83954e-08 4.77295L-7.83954e-08 6.27295L0.75 6.27295L0.75 4.77295ZM26.7876 6.05328C27.0805 5.76039 27.0805 5.28551 26.7876 4.99262L22.0146 0.21965C21.7217 -0.0732435 21.2468 -0.0732435 20.9539 0.21965C20.6611 0.512543 20.6611 0.987417 20.9539 1.28031L25.1966 5.52295L20.9539 9.76559C20.6611 10.0585 20.6611 10.5334 20.9539 10.8263C21.2468 11.1191 21.7217 11.1191 22.0146 10.8263L26.7876 6.05328ZM0.75 6.27295L26.2572 6.27295L26.2572 4.77295L0.75 4.77295L0.75 6.27295Z" fill="white"/>
        </svg>
      </a>
    </div>

    <!-- Right Column: Image -->
    <div class="gift-guide-image-col">
      {%- if section.settings.desktop_image != blank -%}
        <picture>
          {%- if section.settings.mobile_image != blank -%}
            <source media="(max-width: 989px)" srcset="{{ section.settings.mobile_image | image_url: width: 800 }}">
          {%- endif -%}
          {{
            section.settings.desktop_image
            | image_url: width: 1500
            | image_tag: loading: 'lazy', sizes: '(min-width: 990px) 50vw, 100vw', alt: section.settings.heading
          }}
        </picture>
      {%- else -%}
        {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
      {%- endif -%}
    </div>
  </div>

  <!-- 3️⃣ FOOTER TEXT BAR -->
  {%- if section.settings.footer_text != blank or section.settings.mobile_footer_text != blank -%}
    <div class="gift-guide-footer-bar">
      <span class="desktop-show-only">{{ section.settings.footer_text }}</span>
      <span class="mobile-show-only">
        {% if section.settings.mobile_footer_text != blank %}
          {{ section.settings.mobile_footer_text }}
        {% else %}
          {{ section.settings.footer_text }}
        {% endif %}
      </span>
    </div>
  {%- endif -%}
</div>

{% schema %}
{
  "name": "Custom Gift Guide Banner",
  "settings": [
    {
      "type": "header",
      "content": "Top Announcement Bar"
    },
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo Image"
    },
    {
      "type": "range",
      "id": "logo_width",
      "min": 50,
      "max": 250,
      "step": 5,
      "unit": "px",
      "label": "Logo Width",
      "default": 150
    },
    {
      "type": "text",
      "id": "announcement_text",
      "label": "Announcement Text",
      "default": "Find the ideal gift for your loved ones."
    },
    {
      "type": "text",
      "id": "top_btn_text",
      "label": "Right Button Text",
      "default": "CHOOSE GIFT"
    },
    {
      "type": "url",
      "id": "top_btn_link",
      "label": "Right Button Link"
    },
    {
      "type": "color",
      "id": "top_bar_bg",
      "label": "Bar Background Color",
      "default": "#F4F4F4"
    },
    {
      "type": "color",
      "id": "top_bar_text_color",
      "label": "Bar Text Color",
      "default": "#000000"
    },
    {
      "type": "image_picker",
      "id": "top_image",
      "label": "Top Full-Width Image"
    },
    {
      "type": "range",
      "id": "mobile_image_height",
      "min": 200,
      "max": 800,
      "step": 10,
      "unit": "px",
      "label": "Mobile Image Height",
      "default": 400
    },
    {
      "type": "header",
      "content": "Main Section"
    },
    {
      "type": "image_picker",
      "id": "desktop_image",
      "label": "Desktop background image (right side)"
    },
    {
      "type": "image_picker",
      "id": "mobile_image",
      "label": "Mobile background image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "The Gift Guide"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Discover Joy: Your Ultimate Holiday Holiday Gift Destination. Explore our curated selection and find the perfect gifts."
    },
    {
      "type": "text",
      "id": "mobile_heading",
      "label": "Mobile Heading (Optional)"
    },
    {
      "type": "textarea",
      "id": "mobile_description",
      "label": "Mobile Description (Optional)"
    },
    {
      "type": "text",
      "id": "main_btn_text",
      "label": "Primary Button Text",
      "default": "SHOP NOW"
    },
    {
      "type": "url",
      "id": "main_btn_link",
      "label": "Primary Button Link"
    },
    {
      "type": "select",
      "id": "desktop_content_alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "left",
      "label": "Desktop content alignment"
    },
    {
      "type": "select",
      "id": "mobile_content_alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center",
      "label": "Mobile content alignment"
    },
    {
      "type": "header",
      "content": "Section Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top Padding",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom Padding",
      "default": 0
    },
    {
      "type": "header",
      "content": "Footer Text Bar"
    },
    {
      "type": "text",
      "id": "footer_text",
      "label": "Footer Text",
      "default": "SUSTAINABLE, ETHICALLY MADE CLOTHES IN SIZES XXS TO 6XL"
    },
    {
      "type": "text",
      "id": "mobile_footer_text",
      "label": "Mobile Footer Text (Optional)"
    },
    {
      "type": "color",
      "id": "footer_bg_color",
      "label": "Footer Background Color",
      "default": "#FFFFFF"
    },
    {
      "type": "color",
      "id": "footer_text_color",
      "label": "Footer Text Color",
      "default": "#000000"
    }
  ],
  "presets": [
    {
      "name": "Custom Gift Guide Banner"
    }
  ]
}
{% endschema %}
